<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <EditText
        android:id="@+id/inputEditText"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:hint="자연수를 입력해주세요"
        android:inputType="number"
        android:textColor="@color/purple_700"
        android:textColorHint="@color/teal_200"
        android:textSize="20sp"
        android:textStyle="italic"
        android:maxLength="9"
        app:flow_verticalBias="0.4"
        app:flow_horizontalBias="0.2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.473" />

    <ImageButton
        android:id="@+id/inputButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textColor="@color/purple_700"
        android:src="@drawable/baseline_360_24"
        app:layout_constraintStart_toEndOf="@id/inputUnitTextView"
        app:layout_constraintTop_toTopOf="@id/inputEditText"
    />
    <TextView
        android:id="@+id/inputUnitTextView"
        android:text="cm"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/inputEditText"
        app:layout_constraintTop_toTopOf="@id/inputEditText"
        app:layout_constraintBottom_toBottomOf="@id/inputEditText"
        />
    <TextView
        android:id="@+id/outputUnit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="m"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/outputText"
        app:layout_constraintBottom_toBottomOf="@id/outputText"
        />
    <TextView
        android:id="@+id/outputText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100"
        android:textSize="30sp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="@id/inputEditText"
        app:layout_constraintTop_toBottomOf="@id/inputEditText" />


</androidx.constraintlayout.widget.ConstraintLayout>